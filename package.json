{
    "name": "atheera",
    "version": "1.0.0",
    "main": "app.js",
    "scripts": {
        "start": "npx tailwindcss -i ./src/input.css -o ./public/stylesheets/output.css && node app.js",
        "dev": "nodemon -e js,ejs,json --ignore public/ app.js",
        "dev:css": "npx tailwindcss -i ./src/input.css -o ./public/stylesheets/output.css --watch",
        "build": "npx tailwindcss -i ./src/input.css -o ./public/stylesheets/output.css --minify",
        "lint": "eslint .",
        "test": "jest"
    },
    "keywords": [
        "ecommerce",
        "clothing",
        "fashion",
        "express",
        "mongodb"
    ],
    "author": "Yash Varma",
    "license": "ISC",
    "description": "Atheera - A fashion e-commerce platform",
    "dependencies": {
        "@tailwindcss/forms": "^0.5.9",
        "autoprefixer": "^10.4.20",
        "bcrypt": "^5.1.1",
        "compression": "^1.7.4",
        "connect-flash": "^0.1.1",
        "connect-mongo": "^5.1.0",
        "cookie-parser": "^1.4.7",
        "debug": "^4.4.0",
        "dotenv": "^16.4.5",
        "ejs": "^3.1.10",
        "express": "^4.21.1",
        "express-rate-limit": "^7.1.5",
        "express-session": "^1.18.1",
        "google-auth-library": "^9.15.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^6.10.0",
        "mongoose": "^8.8.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.16",
        "passport": "^0.7.0",
        "passport-google-oauth20": "^2.0.0",
        "tailwindcss": "^3.4.14",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "eslint": "^8.57.0",
        "jest": "^29.7.0",
        "morgan": "^1.10.0",
        "nodemon": "^3.0.3",
        "supertest": "^6.3.4"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}